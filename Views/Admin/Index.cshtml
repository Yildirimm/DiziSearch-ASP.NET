@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Admins";
    int a = 1;
}
<br />
<div class="row">
    <div class="col-6">
        <h3 class="">Adminler</h3>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-ekle">Yeni Admin Ekle</a>
    </div>
</div>
<br />
<table class="table" style="border:2px solid;">
    <tr class="table-header">
        <th>@Html.DisplayNameFor(m => m.Id)</th>
        <th>@Html.DisplayNameFor(m => m.UserName)</th>
        <th>@Html.DisplayNameFor(m => m.StatusRole)</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        if (a == 1)
        {
            <tr class="table-inner">
                <td>@Html.DisplayFor(m => user.Id)</td>
                <td>@Html.DisplayFor(m => user.UserName)</td>
                @if (user.StatusRole == "0")
                {
                    <td>Master Admin</td>
                }
                else if (user.StatusRole == "1")
                {
                    <td>Normal Admin</td>
                }
                else
                {
                    <td>Moderator</td>
                }
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-ekle">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-ekle">Delete</a>
                </td>
            </tr>
            a = 2;
        }
        else
        {
            <tr class="table-inner bg-light">
                <td>@Html.DisplayFor(m => user.Id)</td>
                <td>@Html.DisplayFor(m => user.UserName)</td>
                @if (user.StatusRole == "0")
                {
                    <td>Master Admin</td>
                }
                else if (user.StatusRole == "1")
                {
                    <td>Normal Admin</td>
                }
                else
                {
                    <td>Moderator</td>
                }
                <td class="text-right">
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-ekle">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-ekle">Delete</a>
                </td>
            </tr>
            a = 1;
        }
    }
</table>
<br />