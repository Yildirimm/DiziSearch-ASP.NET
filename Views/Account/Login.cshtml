@model LoginModel
@{
    ViewData["Title"] = "Log In";
    Layout = "_LoginLayout";
}

<div>
    <div style="min-height:440px;padding:60px 68px 40px;margin-bottom: 90px; background-color:rgba(0,0,0,.54);border-radius:24px;box-sizing:border-box;display:flex;flex-direction:column;width:100%;margin:0;min-width:380px;">
        <a class="btn-ekle-login" style="text-decoration:none;text-decoration-style:none;" asp-controller="Home" asp-action="Index"><h1 style="vertical-align:middle;text-align:center;font-weight:700;">DiziSearch</h1></a>
        <div style="margin-top:80px;">

            <h1 style="color:#fff;font-weight:700;">Log In</h1>
            <form method="post" asp-action="Login" asp-controller="Account" style="margin-bottom:0;">
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="padding-top:24px;padding-bottom:16px;max-width:100%;position:relative;">
                    <div style="position:relative;">
                        <div style="border-radius:4px;border:0;background:#333;position:relative;">
                            <label>
                                <input  asp-for="Email" type="email" style="height:50px;border-radius:4px;border:0;color:#fff;line-height:50px;padding:16px 20px 0;background: 0 0;width:100%;box-shadow:none;box-sizing:border-box;display:block;margin:0;" />
                                <label  asp-for="Email" style="left:10px;position:absolute;top:3%;color:#8c8c8c;"></label>
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div style="padding-bottom:16px;max-width:100%;z-index:0;">
                    <div style="position:relative">
                        <div style="border-radius:4px;border:0;background:#333;display:flex;">
                            <label>
                                <input asp-for="Password" type="password" style="height:50px;border-radius:4px;border:0;color:#fff;line-height:50px;padding:16px 20px 0;background: 0 0;width:100%;box-shadow:none;box-sizing:border-box;display:block;margin:0;" />
                                <label asp-for="Password" style="left:10px;position:absolute;top:3%;color:#8c8c8c;"></label>
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div style="padding-top:18px;max-width:100%;z-index:0;">
                    <div style="position:relative">
                        <button class="btn-ekle-log-login" type="submit" asp-route-returnUrl="@Model.ReturnUrl" style="border-radius:4px;border:0;font-weight:700;margin:24px 0 12px;width:100%;max-width:100%;padding:16px;display:flex;display:inline-block;min-width:98px;min-height:37px;line-height:1em;position:relative;box-shadow: 0 1px 0 rgba(0,0,0,.55);text-decoration:none;vertical-align:middle;cursor:pointer;letter-spacing:.1px;text-align:center;box-sizing:border-box;border:0;text-transform:none;overflow:visible;">
                            Log In
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}