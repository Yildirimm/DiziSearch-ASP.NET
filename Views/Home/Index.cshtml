            $vis.removeAttr('hidden');
            $('#goster').attr('hidden', true);
            $('#goster2').removeAttr('hidden');
            $('#here').removeClass('denedene');
        });
        $("#goster2").click(function () {
            var $hid = $('.hid'), $vis = $('.vis');
